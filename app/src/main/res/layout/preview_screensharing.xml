<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="@dimen/screen_preview_width"
    android:layout_height="@dimen/screen_preview_height"
    android:layout_marginRight="50dp"
    android:layout_marginTop="40dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp">

    <com.voxeet.android.media.video.SurfaceViewRenderer
        android:id="@+id/renderer"
        android:layout_width="@dimen/screen_preview_width_padding"
        android:layout_height="@dimen/screen_preview_height_padding"
        android:layout_gravity="center" />

</FrameLayout>